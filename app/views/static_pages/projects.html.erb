  <div style="margin-top: 50px", id="project2">
    <h3>Battleship iOS App</h3>
    <div style="float: left; clear: left; margin-right: 20px; margin-bottom: 20px" >
      <%= video_tag('battleship2.mov', :size => '260x480', :controls => true) %>
